source 'https://rubygems.org'

# Core framework
gem 'sinatra'
gem 'rack', '~> 2.2.4'

# Web server
gem 'puma'

# Database
gem 'sequel'
gem 'pg'
gem 'sqlite3'

# Environment & configuration
gem 'dotenv'

# AI & LLM
gem 'ruby_llm'

# Text processing
gem 'redcarpet'

# HTTP client
gem 'http'

# Server-Sent Events
gem 'sinatra-sse'

# Development/Testing (only if needed)
gem 'rspec', group: :development
gem 'nokogiri' # For HTML parsing if needed