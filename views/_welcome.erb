<!-- Welcome Message -->
<div class="text-center mt-12 mb-12">
  <div class="inline-flex items-center justify-center p-3 mb-6 bg-white rounded-2xl shadow-sm border border-gray-100">
    <img src="/logo.svg" alt="Logo" class="w-10 h-10">
  </div>
  <h1 class="text-3xl font-bold text-gray-900 mb-3 tracking-tight">Hello, <%= @current_user[:email].split('@').first.capitalize %>!</h1>
  <p class="text-gray-500 max-w-md mx-auto">How can I help you today?</p>
  
  <!-- Suggested Prompts -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-3 max-w-2xl mx-auto mt-10 text-left">
    
    <!-- Sourcing Card -->
    <button class="group p-4 bg-white border border-gray-200 rounded-xl hover:border-gray-300 hover:shadow-md transition-all duration-200 flex items-start gap-4"
            onclick="document.querySelector('input[name=message]').value = this.querySelector('.prompt-text').textContent.trim(); document.querySelector('input[name=message]').focus();">
       <div class="p-2.5 bg-blue-50 text-blue-600 rounded-lg group-hover:bg-blue-100 group-hover:scale-110 transition-all duration-200 shrink-0">
         <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
         </svg>
       </div>
       <div>
         <div class="font-semibold text-gray-900 mb-0.5 text-sm">Investor Analysis</div>
         <div class="prompt-text text-sm text-gray-500 leading-relaxed">All Series B investments made by Sequoia Capital</div>
       </div>
    </button>

    <!-- Analysis Card -->
    <button class="group p-4 bg-white border border-gray-200 rounded-xl hover:border-gray-300 hover:shadow-md transition-all duration-200 flex items-start gap-4"
            onclick="document.querySelector('input[name=message]').value = this.querySelector('.prompt-text').textContent.trim(); document.querySelector('input[name=message]').focus();">
       <div class="p-2.5 bg-purple-50 text-purple-600 rounded-lg group-hover:bg-purple-100 group-hover:scale-110 transition-all duration-200 shrink-0">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 002 2h2a2 2 0 002-2z"/>
          </svg>
       </div>
       <div>
         <div class="font-semibold text-gray-900 mb-0.5 text-sm">Cap Table Analysis</div>
         <div class="prompt-text text-sm text-gray-500 leading-relaxed">Analyze the cap table of Antrophic</div>
       </div>
    </button>

    <!-- Market Trends Card -->
    <button class="group p-4 bg-white border border-gray-200 rounded-xl hover:border-gray-300 hover:shadow-md transition-all duration-200 flex items-start gap-4"
            onclick="document.querySelector('input[name=message]').value = this.querySelector('.prompt-text').textContent.trim(); document.querySelector('input[name=message]').focus();">
       <div class="p-2.5 bg-emerald-50 text-emerald-600 rounded-lg group-hover:bg-emerald-100 group-hover:scale-110 transition-all duration-200 shrink-0">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
       </div>
       <div>
         <div class="font-semibold text-gray-900 mb-0.5 text-sm">Market Intelligence</div>
         <div class="prompt-text text-sm text-gray-500 leading-relaxed">What are the fastest growing verticals in Generative AI?</div>
       </div>
    </button>
    
    <!-- Outreach Card -->
    <button class="group p-4 bg-white border border-gray-200 rounded-xl hover:border-gray-300 hover:shadow-md transition-all duration-200 flex items-start gap-4"
            onclick="document.querySelector('input[name=message]').value = this.querySelector('.prompt-text').textContent.trim(); document.querySelector('input[name=message]').focus();">
       <div class="p-2.5 bg-orange-50 text-orange-600 rounded-lg group-hover:bg-orange-100 group-hover:scale-110 transition-all duration-200 shrink-0">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
       </div>
       <div>
         <div class="font-semibold text-gray-900 mb-0.5 text-sm">Investor Outreach</div>
         <div class="prompt-text text-sm text-gray-500 leading-relaxed">Draft a cold outreach email to Sequoia Capital</div>
       </div>
    </button>

  </div>
</div>
