<div id="chat-history" class="p-4 space-y-6">
  <% if grouped_chats[:today].any? %>
    <div>
      <div class="px-2 py-2 text-[10px] uppercase tracking-wider font-bold text-gray-400">Today</div>
      <div class="space-y-1">
      <% grouped_chats[:today].each do |chat| %>
        <div class="chat-item group relative">
          <a href="/chat/<%= chat[:id] %>" 
             class="block px-3 py-2.5 text-sm font-medium text-gray-700 rounded-lg hover:bg-gray-100 hover:text-black transition-all duration-200 truncate pr-8"
             hx-get="/chat/<%= chat[:id] %>" 
             hx-target="body" 
             hx-push-url="true">
            <%= chat[:title] %>
          </a>
          <button class="absolute right-2 top-1/2 transform -translate-y-1/2 opacity-0 group-hover:opacity-100 p-1.5 hover:bg-white rounded-md text-gray-400 hover:text-red-500 hover:shadow-sm transition-all duration-200"
                  hx-delete="/chat/<%= chat[:id] %>"
                  hx-target="#chat-history"
                  hx-confirm="Are you sure you want to delete this chat?"
                  title="Delete chat">
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
          </button>
        </div>
      <% end %>
      </div>
    </div>
  <% end %>

